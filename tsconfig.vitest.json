{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/**/__tests__/*", "src/**/*.{test,spec}.{js,ts,jsx,tsx}"],
  "exclude": ["src/**/*.cy.*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "jsdom"],
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": true
  }
}
